	"description": "The flagship backend software for the WBSample platform.",
	"main": "dist/app.js",
	"scripts": {
		"rimraf": "./node_modules/rimraf/bin.js",
		"test_windows:mocha": "set NODE_ENV=development&& mocha --require ts-node/register src/tests/**/*.ts",
		"build_windows:development": "set NODE_ENV=development&& tsc --watch",
		"server_windows:development": "set NODE_ENV=development&& nodemon src/app.ts",
		"test:mocha": "export NODE_ENV=development&& mocha --require ts-node/register src/tests/**/*.ts",
		"build:development": "export NODE_ENV=development&& tsc --watch",
		"server:development": "export NODE_ENV=development&& nodemon src/app.ts",
		"server:staging": "export NODE_ENV=staging&& node dist/app.js",
		"server:production": "export NODE_ENV=production&& node dist/app.js",
		"clean": "npm run rimraf ./dist",
		"build": "tsc"
	},
	"dependencies": {
		"@socket.io/sticky": "^1.0.0",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.19.0",
