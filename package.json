		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-session": "^1.17.1",
		"express-socket.io-session": "^1.3.5",
		"joi": "^17.3.0",
		"moment": "^2.29.1",
		"mongodb": "^3.6.3",
		"mongoose": "^5.12.13",
		"nodemailer": "^6.4.17",
		"redis": "^3.0.2",
		"socket.io": "^3.1.0",
		"socket.io-client": "^3.1.0",
		"socket.io-redis": "^6.0.1",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/compression": "^1.7.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.11",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.20",
		"@types/uuid": "^8.3.0",
