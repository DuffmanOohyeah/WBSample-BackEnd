{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "strict": true,
    "outDir": "dist/",
    "baseUrl":"src/",
    "rootDir": "src/",
    "allowJs": true,
    "checkJs": true,
    //"watch": false,
    "alwaysStrict": true,
    "typeRoots": [
      "./types",
      "node_modules/@types"]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*"],
  "lib": ["es2015"],
  "compileOnSave": true
}
